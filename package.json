{
  "name": "github-repo-analyzer",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "NODE_OPTIONS='--loader ts-node/esm' node --loader ts-node/esm src/index.ts",
    "test": "jest --no-cache",
    "test:watch": "jest --watch --no-cache",
    "test:coverage": "jest --coverage --no-cache"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "tsconfig.json",
          "isolatedModules": true,
          "diagnostics": {
            "ignoreCodes": ["TS151001"]
          }
        }
      ]
    },
    "setupFiles": ["dotenv/config"],
    "setupFilesAfterEnv": ["<rootDir>/__tests__/jest.setup.ts"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "moduleFileExtensions": ["ts", "js", "json", "node", "mjs"],
    "modulePathIgnorePatterns": ["<rootDir>/dist/"],
    "transformIgnorePatterns": [
      "node_modules/(?!(node-fetch|data-uri-to-buffer|fetch-blob|formdata-polyfill)/)"
    ],
    "testPathIgnorePatterns": ["<rootDir>/node_modules/"]
  },
  "keywords": [
    "github",
    "repository",
    "analyzer",
    "openai"
  ],
  "author": "Astrid Lapinski <the.astrid.solveig@gmail.com>",
  "license": "MIT",
  "description": "A tool to analyze and categorize GitHub repositories using OpenAI",
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "dotenv": "^16.5.0",
    "openai": "^4.12.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.30",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
