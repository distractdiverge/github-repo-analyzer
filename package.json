{
  "name": "github-repo-analyzer",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "NODE_OPTIONS='--loader ts-node/esm' node --loader ts-node/esm src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "github",
    "repository",
    "analyzer",
    "openai"
  ],
  "author": "Astrid Lapinski <the.astrid.solveig@gmail.com>",
  "license": "MIT",
  "description": "A tool to analyze and categorize GitHub repositories using OpenAI",
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "dotenv": "^16.5.0",
    "openai": "^4.12.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.30",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
